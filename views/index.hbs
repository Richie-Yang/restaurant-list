<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        
        <a class="btn btn-info w-100 mt-3" href="/restaurant/new">新增餐廳</a>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  {{#if restaurants}}
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                  
                  <div class="d-flex flex-row flex-sm-column flex-lg-row">
                    <a class="btn btn-outline-primary py-1 m-1" href="/restaurants/{{this._id}}/edit">Edit</a>
                    <a class="btn btn-outline-info p-1 m-1" href="/restaurants/{{this._id}}">Detail</a>
                    <form class="d-inline" action="/restaurants/{{this._id}}/delete" method="POST">
                      <button class="btn btn-outline-danger p-1 m-1" type="submit">Delete</button>
                    </form>
                  </div>
                </div>

              </div>
            </div>
          </a>
        {{/each}}

      </div>
    </div>
  </div>
  {{else}}
    <div class="text-center">
      <img class="w-25 mb-5" src="https://cdn.onlinewebfonts.com/svg/img_144471.png" alt="No Result">
      <h1>OOPS!</h1>
      <h5>Couldn't find any result based on your keyword, please try other ones!</h5>
    </div>
  {{/if}}
</div>